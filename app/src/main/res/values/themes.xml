<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Idoprojectapp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/surface_color</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Dark text icons on light bar -->

        <!-- Global Backgrounds -->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <style name="Theme.Idoprojectapp" parent="Base.Theme.Idoprojectapp" />

    <style name="CircleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Modern Input Style -->
    <style name="ModernInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- ... keep existing corner items ... -->
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

        <!-- FIX: Use the reference @color/error_red -->
        <item name="errorIconDrawable">@drawable/ic_error_alert</item>
        <item name="errorIconTint">@color/error_red</item>

        <item name="boxBackgroundColor">@color/surface_color</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearnce</item>
    </style>

    <style name="ErrorTextAppearnce" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:letterSpacing">0</item>
    </style>

</resources>